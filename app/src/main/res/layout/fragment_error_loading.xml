<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgNoNetwork"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/ic_wifi_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textError"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/no_network_error"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/imgNoNetwork"
        app:layout_constraintStart_toStartOf="@id/imgNoNetwork"
        app:layout_constraintTop_toBottomOf="@id/imgNoNetwork" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/btn_retry"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/textError"
        app:layout_constraintStart_toStartOf="@id/textError"
        app:layout_constraintTop_toBottomOf="@id/textError" />
</androidx.constraintlayout.widget.ConstraintLayout>